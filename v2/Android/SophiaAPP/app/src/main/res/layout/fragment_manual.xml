<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManualFragment">

    <!-- TODO: Update blank fragment layout -->

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Switch" />

    <android.support.v7.widget.GridLayout
        android:id="@+id/control_buttons_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal">

        <ImageView
            android:id="@+id/red_circle"
            android:layout_width="80dp"
            android:layout_height="82dp"
            android:src="@drawable/circle_image"

            app:layout_column="5"
            app:layout_row="1"
            android:contentDescription="TODO" />

        <Button
            android:id="@+id/button_up"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/baseline_keyboard_arrow_up_black_36dp"
            app:layout_column="5"
            app:layout_row="0" />

        <Button
            android:id="@+id/button_down"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/baseline_keyboard_arrow_down_black_36dp"
            app:layout_column="5"
            app:layout_row="2" />

        <Button
            android:id="@+id/button_left"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/baseline_keyboard_arrow_left_black_36dp"
            app:layout_column="4"
            app:layout_row="1" />

        <Button
            android:id="@+id/button_right"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/baseline_keyboard_arrow_right_black_36dp"
            app:layout_column="6"
            app:layout_row="1" />

    </android.support.v7.widget.GridLayout>

</FrameLayout>